<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

  <bean id="properties" class="org.apache.camel.spring.spi.BridgePropertyPlaceholderConfigurer">
    <property name="location" value="file:${karaf.home}/etc/org.fusesource.examples.rider-auto-backend.cfg"/>
  </bean>

  <!-- Set username and password to values you set in etc/user.properties -->
  <bean id="activemq" class="io.fabric8.mq.camel.AMQComponent" >
    <property name="connectionFactory" ref="connectionFactory"/>
    <property name="serviceName" value="${org.fusesource.examples.rider-auto-backend.broker.serviceName}"/>
  </bean>

  <bean id="connectionFactory" class="io.fabric8.mq.core.MQConnectionFactory">
    <property name="userName" value="${org.fusesource.examples.rider-auto-backend.broker.userName}"/>
    <property name="password" value="${org.fusesource.examples.rider-auto-backend.broker.password}"/>
  </bean>

  <bean id="backendImpl" class="org.fusesource.camel.impl.BackEndImpl"/>

  <camelContext id="rider-auto-backend" trace="true" xmlns="http://camel.apache.org/schema/spring">
    <route id="rider-auto-backend-route">
      <from uri="activemq:orders" />
      <unmarshal>
        <jaxb contextPath="org.fusesource.camel.model"/>
      </unmarshal>
      <bean ref="backendImpl" />
    </route>
  </camelContext>

</beans>
